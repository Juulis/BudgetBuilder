<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
			 xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<ui:style>
		.category-title {
	       font-size: 1.3em;
	    }
	    
	    .item-title {
			width: 150px;
	
        }
	    
	    .item-planned {
			width: 50px;
	
        }
        
        .item-real {
			width: 50px;
	
        }
        
        .item-cell {
			float:left;
        }
	</ui:style>
	<g:HTMLPanel>
		<div class="{style.category-title}"><span >Ctegory Title</span><span ></span></div>
		<div>
			<div class="{style.item-title} {style.item-cell}">Title</div>
			<div class="{style.item-planned} {style.item-cell}">Planned</div>
			<div class="{style.item-real} {style.item-cell}">Real</div>
		</div>
		<div>
			<div class="{style.item-title} {style.item-cell}">Item Title</div>
			<div class="{style.item-planned} {style.item-cell}">1,200.00</div>
			<div class="{style.item-real} {style.item-cell}">0.00</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder>